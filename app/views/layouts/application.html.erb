<!DOCTYPE html>
<html>
  <head>
    <title>ContactList</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_pack_tag 'stylesheets', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="bg-gray-200 relative min-h-screen ">
      <%= render 'layouts/header' %>

      <% flash.each do |message_type, message| %>
        <%= content_tag 'div', class: "alert alert-#{message_type} alert-dismissibla", role: 'alert' do %>
          <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times:</span>
          </button>
          <%= message %>
        <% end %>
      <% end %> 
      
          
      <div class="w-3/4 m-auto pb-10 bg-gray-400 rounded mt-20">
        <%= yield %>
      </div>
    
      <%= render 'layouts/footer' %>
    </div>
  </body>
</html>
